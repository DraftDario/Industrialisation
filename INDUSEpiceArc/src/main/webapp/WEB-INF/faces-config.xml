<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>selectProduct.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{selectProduct.nextStep}</from-action>
            <from-outcome>next</from-outcome>
            <to-view-id>customerForm.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/customerForm.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{customerForm.saveCustomer()}</from-action>
            <from-outcome>next</from-outcome>
            <to-view-id>orderRecap.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/orderRecap.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{orderRecap.save()}</from-action>
            <from-outcome>next</from-outcome>
            <to-view-id>orderConfirmation.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/orderConfirmation.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{orderConfirmation.deleteOrder()}</from-action>
            <from-outcome>next</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <application>
        <resource-bundle>
            <base-name>bundle</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
   
</faces-config>
